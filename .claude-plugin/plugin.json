{
  "name": "confluence-assistant-skills",
  "version": "1.1.0",
  "description": "14 specialized skills for Confluence Cloud automation. Natural language page management, CQL search with export, comments, attachments, labels, permissions, and JIRA integration.",
  "author": {
    "name": "Jason Krueger",
    "url": "https://github.com/grandcamel"
  },
  "repository": "https://github.com/grandcamel/Confluence-Assistant-Skills",
  "license": "MIT",
  "keywords": [
    "confluence",
    "atlassian",
    "cql",
    "wiki",
    "documentation",
    "pages",
    "spaces",
    "collaboration"
  ],
  "skills": "./.claude/skills/",
  "commands": [
    "./commands/confluence-assistant-setup.md",
    "./commands/browse-skills.md",
    "./commands/skill-info.md"
  ],
  "assistant_skills": {
    "requirements": "requirements.txt",
    "env_vars": [
      {
        "name": "CONFLUENCE_SITE_URL",
        "description": "Confluence Cloud site URL (e.g., https://your-site.atlassian.net)",
        "required": true
      },
      {
        "name": "CONFLUENCE_EMAIL",
        "description": "Atlassian account email for API authentication",
        "required": true
      },
      {
        "name": "CONFLUENCE_API_TOKEN",
        "description": "API token from Atlassian Account Settings",
        "required": true
      },
      {
        "name": "CONFLUENCE_PROFILE",
        "description": "Configuration profile name (default: 'default')",
        "required": false
      }
    ]
  }
}
